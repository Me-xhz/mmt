/* pages/coupon/coupon.wxss */
page{
  background-color: #f2f2f2
}
.flex {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.row {
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  background-color: #fff;
}
.loading-block {
  width: 750rpx;
  height: 40rpx;
}
.loading-text {
  color: #aaaaaa;
  font-size: 26rpx;
  text-align: center;
}
.coupon-top {
  position: fixed;
  width: 750rpx;
  top: 0;
  height: 88rpx;
  padding: 0 66rpx;

  /* background-color: #ffe150; */

  z-index: 99
}
.top-block {
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  color: #555;
  font-size: 28rpx;
  text-align: center;
}
.top-active {
  color: #303030;
}
.top-active-line-0 {
    position: absolute;
    display: block;
    width: 56rpx;
    height: 8rpx;
    bottom: 2rpx;
    left: 169rpx;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);

    background-color: #ffe150;
}
.top-active-line-1 {
    position: absolute;
    display: block;
    width: 56rpx;
    height: 8rpx;
    bottom: 2rpx;
    left: 375rpx;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);

    background-color: #ffe150;
}
.top-active-line-2 {
    position: absolute;
    display: block;
    width: 56rpx;
    height: 8rpx;
    bottom: 2rpx;
    right: 169rpx;
    -webkit-transform: translateX(50%);
        -ms-transform: translateX(50%);
            transform: translateX(50%);

    background-color: #ffe150;
}
/* 暂无优惠券 */
.coupon-empty{
  margin-top: 100rpx;
  background-color: #fefefe;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 370rpx;
}
.coupon-empty-image{
  width: 280rpx;
  height: 200rpx;
  margin: 0 auto !important;
  padding-top: 24rpx;
}
.coupon-empty-image image{
  width: 100%;
  height: 100%;
}
.coupon-empty-text{
  margin-top: 45rpx;
  font-size: 32rpx;
  color: #555555;
  display: block;
  width: 100%;
  text-align: center;
  font-weight: 700;
}
/* 优惠券主体内容 */
.list{
  padding: 32rpx 24rpx;
  margin-top: 90rpx;
}
.coupon-tag {
    position: absolute;
    left: 0rpx;
    bottom: 25rpx;
    margin-left: 44rpx;
}
.coupon-tag-font {
    line-height: 28rpx;
    font-size: 20rpx;
    color:#EB3C39;
    text-align: center;
    display: block;
    font-weight: 500;
}

