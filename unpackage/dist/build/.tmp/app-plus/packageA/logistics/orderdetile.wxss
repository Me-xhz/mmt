.order-header {
  padding: 20rpx 25rpx 0 25rpx;
  background-color: #ffffff;
}
.order-item {
  font-size: 30rpx;
  color: #000000;
  margin-top: 20rpx;
}
.order-state {
  position: absolute;
  top: 35rpx;
  right: 25rpx;
  background-color: #eb3c39;
  color: #ffffff;
  padding: 10rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}
.order-geo {
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 40rpx 25rpx;
  background-color: #ffffff;
}
.geo-box {
  width: 500rpx;
  margin-left: 50rpx;
  padding: 40rpx;
  text-align: center;
  border-width: 2rpx;
  border-style: dotted;
}
.geo-text {
  font-size: 50rpx;
  font-weight: bold;
  color: #DC0805;
}
.geo-name {
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #555555;
}
.order-info {
  position: relative;
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 25rpx;
}
.info-item {
  font-size: 30rpx;
  color: #000000;
  margin-top: 20rpx;
}
.info-state {
  width: 505rpx;
  margin-left:50rpx;
  background-color:#eb3c39;
  color: #ffffff;
  padding: 10rpx 40rpx;
  font-size: 35rpx;
  text-align: center;
}
.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  text-align: center;
  height: 100rpx;
  background-color: #eb3c39;
  font-size: 40rpx;
  color: #ffffff;
  line-height: 100rpx;
}
.order-main{
  padding-top: 0
}
.order-main .total-goods{
  text-align: center;
  padding-bottom: 20px;
}
.info-amount-font{
  font-size: 48rpx!important;
  color:#39ACEB!important;
  font-weight: 600!important;
}

