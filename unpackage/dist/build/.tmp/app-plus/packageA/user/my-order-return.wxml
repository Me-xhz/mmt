<view><view class="order-back-list container"><block wx:for="{{orders}}" wx:for-item="order" wx:for-index="index" wx:key="index"><view class="list-item"><view class="item-header"><view class="header-back"><label class="back-title _span">售后单号：</label><label class="back-text _span">{{order.back_sn}}</label><label class="{{['_span','back-status'+(order.show_order_status.type==1?'danger':'')+' '+(order.show_order_status.type==2?'success':'')]}}">{{order.show_order_status.title}}</label></view></view><view class="order-back-goods"><view class="goods-item" data-back_sn="{{order.back_id}}" data-event-opts="{{[['tap',[['go_order_return_detail',['$event']]]]]}}" bindtap="__e"><view class="item-photo"><image src="{{order.products[0].header_img}}"></image></view><view class="item-info"><view class="info-name">{{order.products[0].goods_name}}</view><view class="info-attr">{{order.products[0].sku_key_name}}</view><view class="info-amount">{{"x"+order.products[0].amount}}</view><view class="info-price"><view class="icon_rmb _i">¥</view>{{order.products[0].shop_price||'0.00'}}</view><view class="info-wrap">{{"申请时间:"+order.add_time}}</view></view></view><block wx:if="{{order.is_button_show==1}}"><view class="goods-bar"><view class="qx" data-back_sn="{{order.back_id}}" data-event-opts="{{[['tap',[['cancel_back',['$event']]]]]}}" bindtap="__e">取消售后</view><view class="ck" data-back_sn="{{order.back_id}}" data-event-opts="{{[['tap',[['go_order_return_detail',['$event']]]]]}}" bindtap="__e">查看详情</view></view></block></view></view></block></view><block wx:if="{{orders&&orders.length<=0}}"><view class="empty"><view class="empty-item"><image class="item-logo" src="{{iconURL+'/icon_order_empty02.png'}}" mode="widthFix"></image><view class="item-text">暂无订单</view></view></view></block><block wx:if="{{loadingShow}}"><loading vue-id="1" bind:__l="__l"></loading></block></view>