/* pages/user/dingdan.wxss */
.swiper-tab {
  width: 100%;
  height: 88rpx;
  color: #404245;
  font-weight: 400;
  text-align: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  line-height: 88rpx;
  background-color: #fff;
  border-bottom: 2rpx #e9e9e9 solid;
  border-width: 1rpx;
}
.swiper-tab-list {
  position: relative;
  display: block;
  float: left;
  width: 20%;
  height: 88rpx;
  line-height: 88rpx;
  overflow: hidden;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.swiper-tab-list text {
  color: #030303;
  font-size: 30.8rpx;
  padding: 0 10.1rpx 15rpx 10.1rpx;
}
.order-list {
  display: block;
  width: 100%;
  padding-top: 88rpx;
  overflow: hidden;
}
.order-list .list-item {
  margin-top: 20rpx;
}
.header-row {
  padding: 0 24rpx;
  background: #fff;
}
.border-b{
  border-bottom: 2rpx solid #f0f0f0;
  width: 100%;
  height:88rpx;
  line-height: 88rpx;
}
.b-bottom{
  border-top:2rpx solid #f0f0f0;
}
.header-lf {
  font-size: 28rpx;
  color: #767676;
}
.header-rg {
  font-size: 24rpx;
  color: #555;
  font-weight: 600;
  text-align: right;
}
.order-main{
  padding-left: 24rpx;
  padding-right: 24rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 100%;
}
.empty {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.empty.address-empty {
  height: 600rpx;
  background: #fff;
}
.empty .empty-item {
  position: absolute;
  left: 50%;
  /*top: 50%;*/
  display: block;
  width: 100%;
  -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
          transform: translateX(-50%);
}
.empty .empty-item .item-logo {
  display: block;
  margin: 0 auto;
  width: 288rpx;
  height: 128rpx;
}
.filter-item{
  color: #555 !important;
}
.filter-item.active text {
  line-height: 88rpx !important;
  border-bottom: #ffe150 4rpx solid !important;
  color: #303030 !important;
  /*font-weight: 600;*/
}
.filter-item text{
  color: #555 !important;
  font-size:28rpx;
}
.footer-button{
  background-color: #ffe150;
  color:#555;
}

