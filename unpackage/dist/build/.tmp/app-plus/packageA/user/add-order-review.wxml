<view><view class="container"><block wx:for="{{orderReview}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="review-goods"><view class="goods-item"><view class="row row-center item-inner margin_left"><view class="item-photo"><image src="{{item.goods_img}}"></image></view><view class="item-name">{{item.goods_name}}</view><view class="review_view"><block wx:if="{{item.comment_rank==1}}"><view class="review_grade"><image class="grade-icon" src="{{iconURL+'/icon_comment_good.png'}}"></image><label class="grade-name _span">好评</label></view></block><block wx:if="{{item.comment_rank==2}}"><view class="review_grade"><image class="grade-icon" src="{{iconURL+'/icon_comment_middle.png'}}"></image><label class="grade-name _span">中评</label></view></block><block wx:if="{{item.comment_rank==3}}"><view class="review_grade"><image class="grade-icon" src="{{iconURL+'/icon_comment_bad.png'}}"></image><label class="grade-name _span">差评</label></view></block></view></view><view class="old-review padding_left"><view><text>{{item.old_content}}</text></view><block wx:for="{{item.review_img}}" wx:for-item="img" wx:for-index="index2" wx:key="index2"><view class="box-img"><image src="{{img}}"></image></view></block></view><view class="item-textarea padding_left"><view class="addReviewTitle">追加评价</view><textarea maxlength="500" type="text" placeholder="请输入文字描述，5-500字" data-checked-id="{{item.checkedId}}" data-event-opts="{{[['input',[['add_comments',['$event']]]]]}}" bindinput="__e"></textarea></view><view class="upload-img-box clearfix padding_left" style="padding-left:0;"><view class="box-title">上传图片<label class="_span">(选填，最多3张)</label></view><block wx:for="{{item.uploadImg}}" wx:for-item="img" wx:for-index="index2" wx:key="index2"><view class="box-img"><image src="{{img}}"></image><view class="img-del iconfont icon-btn_huangsetishiguanbix" data-index="{{index}}" data-checked-id="{{item.checkedId}}" data-event-opts="{{[['tap',[['delUploadImg',['$event']]]]]}}" bindtap="__e"></view></view></block><block wx:if="{{item.uploadImg.length<3}}"><label data-checked-id="{{item.checkedId}}" data-event-opts="{{[['tap',[['updataimg',['$event']]]]]}}" bindtap="__e"></label></block></view></view></view></block><view class="review-submit-box"><button class="review-submit" type="warn" data-event-opts="{{[['tap',[['submitImg',['$event']]]]]}}" bindtap="__e">提交</button></view></view><view id="dialog" hidden="{{true}}"><view class="mask"></view><view class="dialog danger"><view class="dialog-content">确定放弃本次评价？</view><view class="dialog-button"><view data-event-opts="{{[['tap',[['touchDialogCancel',['$event']]]]]}}" class="button left" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['touchDialogConfirm',['$event']]]]]}}" class="button right" bindtap="__e">确认</view></view></view></view></view>