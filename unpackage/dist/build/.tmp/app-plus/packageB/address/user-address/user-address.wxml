<view><view class="app-content"><view class="top-info"><view class="info-text">管理你的收货地址</view><block wx:if="{{address.length>0}}"><view class="info-button ng-scope"><view data-event-opts="{{[['tap',[['edit',['$event']]]]]}}" class="button-text" bindtap="__e">{{editType?'编辑':'完成'}}</view></view></block></view><block wx:if="{{address&&address.length>0}}"><view class="my-address ng-scope"><block wx:for="{{address}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['list-item readonly '+(address_id==item.address_id&&editType?'checkOrder':'')+' '+(editType==false?'paddingleft':'')]}}" data-addid="{{item.address_id}}" data-item="{{item}}" data-event-opts="{{[['tap',[['choose',['$event']]]]]}}" bindtap="__e"><view class="item-info"><icon class="{{['user-item-checkbox '+(item.checked?'user-active':'')]}}"></icon><block wx:if="{{!address_id}}"><image class="item-arrow" src="{{iconURL+'/icon_right_arrow.png'}}"></image></block><view class="info-contact"><text>{{item.consignee}}</text><text>{{item.mobile}}</text><block wx:if="{{item.is_default}}"><label class="defaults _span">默认</label></block></view><view class="info-detail"><block wx:for="{{item.regions}}" wx:for-item="chril" wx:for-index="index" wx:key="index"><text>{{chril.name}}</text></block><text class="addInfo">{{item.address}}</text></view></view></view></block></view></block><block wx:if="{{address&&address.length<=0}}"><view class="address-empty"><view class="empty-item"><image src="{{iconURL+'/icon_address_empty.png'}}" mode="widthFix"></image><text>暂无收货地址</text></view></view></block><view class="add-address" hidden="{{!editType}}" data-event-opts="{{[['tap',[['add_address',['$event']]]]]}}" bindtap="__e"><button class="submit" type="warn">添加收货地址</button></view><view data-event-opts="{{[['tap',[['delAddress',['$event']]]]]}}" bindtap="__e"><view class="add-address delete" hidden="{{editType}}"><button class="submit" type="primary">删除收货地址</button></view></view></view><block wx:if="{{loadingShow}}"><loading vue-id="1" bind:__l="__l"></loading></block></view>