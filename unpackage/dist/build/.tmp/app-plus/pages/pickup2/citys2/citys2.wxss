page {
  background: #f2f2f2;
}
.location {
  background-color: #fff;
  padding: 16rpx 32rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 28rpx;
}
.location .location-city {
    width: 200rpx;
    height: 60rpx;
    border: 1px solid #ebebeb;
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    margin-top: 10rpx;
    color: #46595F;
}
.location .location-city .iconfont {
      margin-right: 10rpx;
      font-size: 28rpx;
      color: #ffd122;
      display: inline-block;
}
.location .location-city .icon-btn_dizhix:before {
      content: "\E69F";
}
.location .location-city .cityName {
      display: inline-block;
}
.word {
  background-color: #F3F7F8;
  font-size: 32rpx;
  font-weight: bold;
  color: #46595F;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
}
.city-item-box {
  background-color: #fff;
  padding: 0 32rpx;
}
.city-item-box .city-item {
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1px solid #DEE4E4;
    color: #46595F;
    font-size: 32rpx;
}
.city-item-box .city-item:last-child {
    border-bottom: none;
}
.word-box {
  width: 66rpx;
  position: fixed;
  top: 17%;
  right: 20rpx;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.word-box .word-box-location {
    text-align: center;
    padding: 2rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #888;
}
.word-box .word-item {
    text-align: center;
    padding: 2rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #888;
}

